    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'idleslayer'",
            "cargo": {
                "args": ["build", "--bin=idleslayer", "--package=idleslayer"],
                "filter": {
                    "name": "idleslayer",
                    "kind": "bin"
                }
            },
            "args": [],
            "terminal": "integrated",
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'idleslayer'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=idleslayer",
                    "--package=idleslayer"
                ],
                "filter": {
                    "name": "idleslayer",
                    "kind": "bin"
                }
            },
            "args": [],
            "console": "externalTerminal",

            "cwd": "${workspaceFolder}"
        }
    ]
}
